<p id="notice"><%= notice %></p>

<h1>Listing Drivers</h1>

<section class="new_link">
  <%= link_to 'New Driver', new_driver_path %>
</section>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Age</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @drivers.each do |driver| %>
      <tr>
        <td><%= driver.id %></td>
        <td><%= driver.name %></td>
        <td><%= driver.age %></td>
        <td><%= link_to 'Show', driver %></td>
        <td><%= link_to 'Edit', edit_driver_path(driver) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
